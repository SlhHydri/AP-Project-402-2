<Window x:Class="RestaurantManagementSystem.Views.ValidationCodePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RestaurantManagementSystem.Utilities"
        Title="Validation Code Page">
    <Grid>
        <TextBox Text="{Binding ValidationCode}"
                 local:TextBoxHelper.PlaceholderText="Validation Code"/>
        <Button Content="Validate" Command="{Binding ValidateCodeCommand}"/>
    </Grid>
</Window>
